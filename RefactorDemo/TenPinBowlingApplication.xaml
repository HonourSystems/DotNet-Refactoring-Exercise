<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RefactorDemo" x:Class="RefactorDemo.MainWindow"
        Title="MainWindow" Height="350" Width="760.821">
    <Grid>
        <StackPanel x:Name="Layout" >
            <local:PlayerPanel x:Name="Player1Frames" Margin="10"/>
            <local:PlayerPanel x:Name="Player2Frames" Margin="10"/>
        <StackPanel Orientation="Horizontal" Height="136" >
                <local:ScoringButtonPanel x:Name="ScoringButtons" Margin="10"/>
                <Button x:Name="Reset" Content="Reset" VerticalAlignment="Center" Margin="10" Click="Reset_Click"/>
                <Button x:Name="ChangePlayer" Content="Change Player" VerticalAlignment="Center" Margin="10" Click="ChangePlayer_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
